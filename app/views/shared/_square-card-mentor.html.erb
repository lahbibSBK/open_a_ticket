
<div class="square-mentor-card">
  <img class="square-mentor-card-user" src=<%= mentor.pic_url %> alt="mentor-avatar">
  <a class="card-link" href="#" ></a>
  <div class="square-mentor-card-name">
    <h2> <%= mentor.first_name %> <%= mentor.last_name %></h2>
  </div>
  <div class="square-mentor-card-price">
    <h2> <%= mentor.mentor_profil.minimum_price %> â‚¬/hour </h2>
  </div>
  <div class="square-mentor-card-skills">
    <% mentor.mentor_profil.tag_names.take(5).each do |skill| %>
      <div class="skill">
        <p><%= skill %></p>
      </div>
    <% end %>
  </div>
  <div class="square-mentor-card-reviews">
    <% if  mentor.reviews.blank? %>
      <div>
        <p>No yet reviews </p>
      </div>
    <% else %>
      <p><%= mentor.reviews.count %> reviews </p>
      <div class="square-mentor-card-reviews-stars">
          <% mentor.reviews.average(:rating).round().times do |i| %>
            <i class="fas fa-star"></i>
          <% end %>
          <% (5 - mentor.reviews.average(:rating).round()).times do |i| %>
            <i class="far fa-star"></i>
            <% end %>
      </div>
    <% end %>
  </div>
  <div class="square-mentor-card-batch">
    <p>BATCH 121</p>
  </div>
</div>











