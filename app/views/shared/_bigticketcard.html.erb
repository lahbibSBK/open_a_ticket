<div class="bigcard">

  <div class="bigcard-avatar">
    <% if ticket.mentor.blank? %>
      <%= image_tag 'emptyavatar.png' %>
     <% else %>
      <img src=<%= ticket.mentor.pic_url %> alt="mentor-avatar">
    <% end %>
  </div>

  <div class="bigcard-date">
    <h2>created at:</h2>
    <p><%=ticket.created_at%><</p>
  </div>

  <div class="bigcard-title"> <%= ticket.title %></div>

  <div class="bigcard-content"> <%= ticket.content %></div>


  <div class="bigcard-flag"><p>drapeau</p></div>

  <div class="bigcard-price">
    <p> Price max/h :</p>
    <% if ticket.status == "open" %>
      <%= ticket.price %>
    <% else %>
      <%= ticket.mentor.mentor_profil.minimum_price %>
    <% end %>
  </div>

  <div class="bigcard-skills">
   <% ticket.ticket_skills.gsub('"',"").gsub('[',"").gsub(']',"").split(",").each do |skill| %>
   <div class="skill">
     <p><%= skill %></p>
   </div>
   <% end %>
 </div>

</div>




