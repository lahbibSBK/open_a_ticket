<div class="long-ticket-card">
  <div class="long-card-created">
    <p>created the </p>
    <h2><%= l(ticket.created_at, format: :short) %></h2>
  </div>
  <% if ticket.mentor.blank? %>
      <%= image_tag 'emptyavatar.png', class: "long-card-user" %>
     <% else %>
      <img class="long-card-user" src=<%= ticket.mentor.pic_url %>>
    <% end %>
  <div class="long-card-description">
    <h2> <%= link_to ticket.title, ticket_path(ticket)  %> </h2>
    <p><%= ticket.content %></p>
  </div>
  <div class="long-card-price">
    <p> <%= ticket.price_cents %> â‚¬/hour </p>
  </div>
  <div class="long-card-skills">
    <% ticket.tag_names.take(4).each do |skill| %>
      <div class="skill">
        <p><%= skill %></p>
      </div>
    <% end %>
  </div>
  <div class="long-card-flag">
    <% ticket.speaking_language.each do |langue| %>
    <span class="flag-icon flag-icon-<%= langue.downcase %>"></span>
    <% end %>
  </div>
</div>
