<div class="wrapper bg-dark">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10  col-sm-offset-1">
        <div class="form-container-large">
          <h1>Create a Ticket</h1>
          <%= simple_form_for ticket do |f| %>
            <%= f.input :title, placeholder:"Title of the ticket" %>
            <%= f.input :content, placeholder:"Description of the ticket" %>
            <%= f.input :tag_names, collection: Gutentag::Tag.all, input_html: { multiple: true } %>
            <%= f.input :price, placeholder: "Hours rate" %>
            <%= f.input :ticket_duration, placeholder:"How many hours / what's the repartition?" %>
            <%= f.input :ticket_location, placeholder: "Do you need someone close to your Location?" %>
            <%= f.input :speaking_language, placeholder: "Your native language or Do you accept someone speaking english?" %>
            <%= f.input :priority, collection: Ticket::PRIORITIES, prompt: "What is the priority of the mission" %>
            <%= f.submit "Create your ticket", class: "btn btn-primary " %>
          <% end %>
      </div>
      </div>
    </div>
  </div>
</div>

